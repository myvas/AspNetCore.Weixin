@model SendWeixinViewModel

@{
    ViewData["Title"] = "Send Weixin Message";
}

<h2>@ViewData["Title"]</h2>

<form method="post" action="SendWeixin">
    @Html.AntiForgeryToken()
    <dl>
        <dt>
            openid
        </dt>
        <dd>
            <input asp-for="OpenId" type="text"/>
        </dd>
        <dt>
            content
        </dt>
        <dd>
            <input type="text"  asp-for="Content" />
        </dd>
    </dl>
    <input type="submit" value="Submit" />
</form>